<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_45"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收货人"
            android:textColor="@color/normal_666"
            android:textSize="@dimen/dm_13"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm_10"
            android:background="@null"
            android:hint="请输入收货人姓名"
            android:maxLength="8"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_13"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_45"
        android:layout_marginTop="@dimen/dm_0.5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联系电话"
            android:textColor="@color/normal_666"
            android:textSize="@dimen/dm_13"
            />

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm_10"
            android:background="@null"
            android:hint="请输入联系电话"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_13"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_45"
        android:layout_marginTop="@dimen/dm_0.5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在省"
            android:textColor="@color/normal_666"
            android:textSize="@dimen/dm_13"
            />

        <EditText
            android:id="@+id/et_pro"
            android:focusable="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm_10"
            android:background="@null"
            android:hint="请选择所在省"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_13"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_more"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_45"
        android:layout_marginTop="@dimen/dm_0.5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在市"
            android:textColor="@color/normal_666"
            android:textSize="@dimen/dm_13"
            />

        <EditText
            android:id="@+id/et_city"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm_10"
            android:background="@null"
            android:focusable="false"
            android:hint="请选择所在市"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_13"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_more"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_45"
        android:layout_marginTop="@dimen/dm_0.5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在区"
            android:textColor="@color/normal_666"
            android:textSize="@dimen/dm_13"
            />

        <EditText
            android:id="@+id/et_area"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm_10"
            android:focusable="false"
            android:background="@null"
            android:hint="请选择所在区"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_13"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_more"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_45"
        android:layout_marginTop="@dimen/dm_0.5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="详细地址"
            android:textColor="@color/normal_666"
            android:textSize="@dimen/dm_13"
            />

        <EditText
            android:id="@+id/et_des_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm_10"
            android:background="@null"
            android:lines="1"
            android:hint="请输入详细地址"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_13"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_45"
        android:layout_marginTop="@dimen/dm_0.5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设为默认地址"
            android:textColor="@color/normal_666"
            android:textSize="@dimen/dm_13"
            />

        <ImageView
            android:id="@+id/iv_is_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10"
            android:background="@null"
            android:hint="请输入联系电话"
            android:src="@drawable/select_address_default"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_13"/>
    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="@dimen/dm_20"
        android:id="@+id/ll_commit"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:background="@mipmap/icon_button_bg"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dm_10"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/icon_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_marginLeft="@dimen/dm_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_16"/>

    </LinearLayout>
</LinearLayout>