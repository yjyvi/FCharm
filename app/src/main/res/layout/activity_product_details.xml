<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-27dp"
                android:fitsSystemWindows="true"
                android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dm_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Banner-->
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_200"
                app:indicator_height="@dimen/dm_6"
                app:indicator_margin="@dimen/dm_5"
                app:indicator_width="@dimen/dm_6"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dm_15">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="华三（H3C）SFP-GE-SX-MM850-A SFP千兆光模块 850nm 550m"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dm_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm_20">


                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$188"
                        android:textColor="@color/normal_red"
                        android:textSize="@dimen/dm_17"/>

                    <TextView
                        android:id="@+id/tv_showpiece"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="展示品"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dm_12"/>

                    <TextView
                        android:drawableLeft="@mipmap/icon_sole"
                        android:drawablePadding="@dimen/dm_5"
                        android:id="@+id/tv_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm_25"
                        android:text="销量231"
                        android:textColor="@color/normal_gray"
                        android:textSize="@dimen/dm_12"/>


                    <TextView
                        android:id="@+id/tv_browse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm_25"
                        android:text="浏览量1231"
                        android:textColor="@color/normal_gray"
                        android:textSize="@dimen/dm_12"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm_20">


                    <TextView
                        android:id="@+id/tv_product_specifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_product_specifications"
                        android:drawablePadding="@dimen/dm_5"
                        android:text="规格书"
                        android:textColor="@color/normal_blue_text_color"
                        android:textSize="@dimen/dm_13"/>

                    <TextView
                        android:id="@+id/tv_organization_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="威海电力电源有限公司"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dm_13"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_45"
                android:layout_marginTop="@dimen/dm_8"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_account_product_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="商品详情"
                        android:textColor="@drawable/tab_text"
                        android:textSize="@dimen/dm_13"/>

                    <View
                        android:id="@+id/v_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dm_2"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="评价"
                        android:textColor="@drawable/tab_text"
                        android:textSize="@dimen/dm_13"/>

                    <View
                        android:id="@+id/v_line2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dm_2"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_0.5"
                android:background="@color/common_line"/>

            <WebView
                android:id="@+id/wb_product_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_8"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dm_12"
                android:paddingLeft="@dimen/dm_15"
                android:paddingTop="@dimen/dm_12">


                <View
                    android:id="@+id/v_line6"
                    android:layout_width="@dimen/dm_3"
                    android:layout_height="@dimen/dm_18"
                    android:background="@color/normal_blue_text_color"/>

                <TextView
                    android:id="@+id/tv_all_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_10"
                    android:layout_toRightOf="@id/v_line6"
                    android:text="全部评价"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dm_13"/>


            </RelativeLayout>

            <!--评价信息-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_0.5"/>

            <LinearLayout
                android:id="@+id/ll_all_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm_8"
                android:background="@color/white"
                android:paddingBottom="@dimen/dm_12"
                android:paddingLeft="@dimen/dm_15"
                android:paddingRight="@dimen/dm_15"
                android:paddingTop="@dimen/dm_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="查看全部用户评价"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dm_13"/>

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dm_5"
                    android:drawableRight="@mipmap/icon_more"
                    android:text="共218条"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/dm_12"/>

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_advisory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_0.5"
                    android:background="@color/common_line"/>

                <ImageView
                    android:layout_width="@dimen/dm_21"
                    android:layout_height="@dimen/dm_21"
                    android:layout_marginTop="@dimen/dm_5"
                    android:src="@mipmap/icon_server"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/dm_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询"/>
            </LinearLayout>


            <View
                android:layout_width="@dimen/dm_0.5"
                android:layout_height="match_parent"
                android:background="@color/common_line"/>


            <LinearLayout
                android:id="@+id/ll_collection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_0.5"
                    android:background="@color/common_line"/>

                <ImageView
                    android:id="@+id/iv_collection"
                    android:layout_width="@dimen/dm_21"
                    android:layout_height="@dimen/dm_21"
                    android:layout_marginTop="@dimen/dm_5"
                    android:src="@drawable/select_collection"/>


                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/dm_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="收藏"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/normal_blue_text_color"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/icon_order_pay"
                android:drawablePadding="@dimen/dm_10"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="@dimen/dm_14"/>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="@dimen/dm_20">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dm_15"
            android:src="@mipmap/icon_details_back"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dm_15"
            android:src="@mipmap/icon_details_share"/>

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_share"
            android:padding="@dimen/dm_15"
            android:src="@mipmap/icon_details_msg"/>

    </RelativeLayout>


    <ViewStub
        android:id="@+id/vs_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_empty"/>
</RelativeLayout>