<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/translate"
                android:orientation="vertical">
    <!--主页面-->
    <com.whmnrc.feimei.views.MyViewPager
        android:id="@+id/tab_pager"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dm_50"
        android:layout_height="match_parent"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dm_50"
        android:background="@color/normal_gray_line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/withe"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_table_home"
            style="@style/Main_RadioGroup"
            android:drawableTop="@drawable/tab_home"
            android:text="首页"/>


        <TextView
            android:id="@+id/tv_table_organization_chart"
            style="@style/Main_RadioGroup"
            android:drawableTop="@drawable/tab_organization_chart"
            android:text="企业名录"/>

        <TextView
            android:id="@+id/tv_table_industry_resources"
            style="@style/Main_RadioGroup"
            android:drawableTop="@drawable/tab_industry_resources"
            android:text="行业资源"/>


        <TextView
            android:id="@+id/tv_table_product_library"
            style="@style/Main_RadioGroup"
            android:drawableTop="@drawable/tab_product_library"
            android:text="行业产品库"/>


        <TextView
            android:id="@+id/tv_table_special_information"
            style="@style/Main_RadioGroup"
            android:drawableTop="@drawable/tab_special_information"
            android:text="特聘信息"/>


    </LinearLayout>


</RelativeLayout>