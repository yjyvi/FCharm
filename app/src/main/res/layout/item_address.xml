<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/dm_15"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout

        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="wwww"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_14" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:textSize="@dimen/dm_14"
            android:text="546545"
            />

    </LinearLayout>

    <TextView
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15"
        android:id="@+id/tv_address"
        android:textSize="@dimen/dm_12"
        android:textColor="@color/normal_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_14"
        android:text="湖北省武汉市武昌区广埠屯地铁站旁融科T1写字楼1404—
1405室" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@color/common_line" />

    <LinearLayout
        android:id="@+id/ll_is_select"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_is_default"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/dm_20"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_is_default"
                android:layout_width="@dimen/dm_15"
                android:layout_height="@dimen/dm_15"
                android:src="@drawable/select_cart" />

            <TextView
                android:id="@+id/tv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_8"
                android:text="默认地址"
                android:textColor="@color/black"
                android:textSize="@dimen/dm_12" />
        </LinearLayout>



        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_address_edit"
            android:drawablePadding="@dimen/dm_6"
            android:text="编辑"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_12" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_18"
            android:drawableLeft="@mipmap/icon_address_del"
            android:drawablePadding="@dimen/dm_6"
            android:text="删除"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_12" />

    </LinearLayout>

</LinearLayout>
