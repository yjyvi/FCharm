<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/withe"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sale_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_home_list"
            android:drawablePadding="@dimen/dm_5"
            android:paddingBottom="@dimen/dm_10"
            android:paddingLeft="@dimen/dm_15"
            android:paddingTop="@dimen/dm_10"
            android:textSize="@dimen/dm_14"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_gray"
            android:padding="@dimen/dm_10"
            android:text="更多>>"
            android:textSize="@dimen/dm_12"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:background="@color/common_line"/>

    <ViewStub
        android:id="@+id/vs_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_empty"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back_gray"/>
</LinearLayout>