<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dm_15"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_product_list"
        android:layout_width="match_parent"
        android:background="#EFEFEF"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_2"
        />


    <LinearLayout
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_58"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:text="合计:￥99"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/dm_14"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dm_85"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_order_red_circle"
            android:gravity="center"
            android:paddingBottom="@dimen/dm_5"
            android:paddingLeft="@dimen/dm_10"
            android:paddingRight="@dimen/dm_10"
            android:textColor="@color/normal_red"
            android:paddingTop="@dimen/dm_5"
            android:text="取消订单"
            android:textSize="@dimen/dm_14"/>

        <TextView
            android:textColor="@color/normal_red"
            android:id="@+id/tv_order_pay"
            android:layout_width="@dimen/dm_85"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_20"
            android:background="@drawable/shape_order_red_circle"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="@dimen/dm_5"
            android:paddingLeft="@dimen/dm_10"
            android:paddingRight="@dimen/dm_10"
            android:paddingTop="@dimen/dm_5"
            android:text="付款"
            android:textSize="@dimen/dm_14"/>
    </LinearLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_line"/>
</LinearLayout>