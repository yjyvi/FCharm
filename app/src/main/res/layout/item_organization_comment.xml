<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dm_0.5"
    android:background="@color/withe"
    android:orientation="vertical"
    android:padding="@dimen/dm_15">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_img"
        android:layout_width="@dimen/dm_25"
        android:layout_height="@dimen/dm_25"
        android:src="@color/normal_gray"/>


    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_7"
        android:layout_toRightOf="@id/iv_user_img"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/dm_12"/>


    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dm_9"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/dm_12"/>


    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="@dimen/dm_5"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/iv_user_img"
        android:layout_marginLeft="@dimen/dm_7"
        android:layout_marginTop="@dimen/dm_10"
        android:layout_toRightOf="@id/iv_user_img"
        android:textSize="@dimen/dm_12"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_goods_comment_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_comment_content"
        android:layout_marginLeft="@dimen/dm_7"
        android:layout_toRightOf="@id/iv_user_img"/>


</RelativeLayout>