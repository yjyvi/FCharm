<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dm_15"
                android:paddingRight="@dimen/dm_15"
                android:paddingTop="@dimen/dm_15"
                 >


    <LinearLayout
        android:id="@+id/ll_top_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="35"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_12"/>

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_8"
            android:background="@mipmap/icon_sp_label"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm_6"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_9"/>


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_8"
            android:layout_weight="1"
            android:gravity="right"
            android:lines="1"
            android:textColor="@color/normal_red"
            android:textSize="@dimen/dm_12"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top_info"
        android:layout_marginTop="@dimen/dm_8"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/dm_11"/>

    <TextView
        android:id="@+id/tv_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_education"
        android:layout_marginTop="@dimen/dm_8"
        android:drawableLeft="@mipmap/icon_browse"
        android:drawablePadding="@dimen/dm_5"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/dm_11"/>


    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_top_info"
        android:layout_marginTop="@dimen/dm_8"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/dm_11"/>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="@dimen/dm_8"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/dm_11"/>


    <View
        android:layout_marginTop="@dimen/dm_10"
        android:layout_below="@id/tv_time"
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:background="@color/common_line"/>
</RelativeLayout>