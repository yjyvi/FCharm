<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dm_15">


    <LinearLayout
        android:id="@+id/ll_name"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="程为海"
            android:textColor="@color/normal_blue_text_color"
            android:textSize="@dimen/dm_14"/>


        <!--标签-->
        <LinearLayout
            android:layout_marginLeft="@dimen/dm_5"
            android:id="@+id/ll_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_money_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_name"
        android:layout_marginTop="@dimen/dm_12"
        android:text="认缴出资额"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money_name"
        android:layout_marginTop="@dimen/dm_8"
        android:text="495万元"
        android:textColor="@color/normal_gray"/>

    <TextView
        android:id="@+id/tv_proportion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money"
        android:layout_marginTop="@dimen/dm_12"
        android:text="持股比例"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/tv_proportion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_proportion_name"
        android:layout_marginTop="@dimen/dm_8"
        android:text="55.00%"
        android:textColor="@color/normal_gray"/>

    <TextView
        android:id="@+id/tv_time_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_name"
        android:layout_marginRight="@dimen/dm_80"
        android:layout_marginTop="@dimen/dm_12"
        android:text="认缴时间"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_time_name"
        android:layout_below="@id/tv_money_name"
        android:layout_marginTop="@dimen/dm_8"
        android:text="未公开"
        android:textColor="@color/normal_gray"/>

</RelativeLayout>