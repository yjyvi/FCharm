<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/dm_100"
                android:layout_height="@dimen/dm_110"
                android:id="@+id/rl_layout"
                android:layout_margin="@dimen/dm_4"
                android:elevation="4dp"
                android:background="@drawable/select_vip_time"
                android:gravity="center"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dm_20"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_money"
            android:includeFontPadding="false"
            android:layout_marginBottom="@dimen/dm_4"
            android:text="ï¿¥"
            android:textColor="@drawable/select_apprecalate_text"
            android:textSize="@dimen/dm_12"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_name"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="@drawable/select_apprecalate_text"
            android:textSize="@dimen/dm_30"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_info"
        android:textColor="@drawable/select_apprecalate_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dm_10"
        android:layout_marginLeft="@dimen/dm_3"
        android:layout_marginRight="@dimen/dm_3"
        android:layout_marginTop="@dimen/dm_5"
       />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_0.5"
        android:layout_above="@id/tv_info"
        android:background="@color/common_line"/>

</RelativeLayout>