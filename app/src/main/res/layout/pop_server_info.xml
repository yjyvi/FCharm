<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dm_35"
        android:layout_marginRight="@dimen/dm_35"
        android:background="@drawable/shape_home_order_back"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dm_30"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dm_16"
                android:paddingTop="@dimen/dm_10"
                android:text="工作人员信息"
                android:textColor="@color/normal_blue_text_color"
                android:textSize="@dimen/dm_14"
                />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dm_10"
                android:src="@mipmap/icon_close2"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dm_30"
            android:paddingRight="@dimen/dm_30">


            <TextView
                android:drawablePadding="@dimen/dm_10"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_user"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/dm_13"/>



            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dm_5"
                android:drawablePadding="@dimen/dm_10"
                android:drawableLeft="@mipmap/icon_mail"
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dm_13"/>


            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dm_5"
                android:drawablePadding="@dimen/dm_10"
                android:drawableLeft="@mipmap/icon_tel"
                android:id="@+id/tv_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dm_13"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>